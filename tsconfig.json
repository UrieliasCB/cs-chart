{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "baseUrl": "components/",
        "skipLibCheck": true,
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "jsx": "react",
        "module": "es6",
        "declaration": true,
        "outDir": "./lib",
        "moduleResolution": "node",
        "typeRoots": ["node_modules/@types"],
        "target": "ES5"
    },
    "include": [
        "components"
    ],
    "exclude": [
        "node-modules",
        "lib"
    ]
}